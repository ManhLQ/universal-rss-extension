{
  "name": "Universal RSS extension",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Universal RSS",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": ["background.bundle.js"],
    "persistent": false
  },
  "options_page": "options.html",
  "browser_action": {
    "default_icon": "icons/icon48.png",
    "default_title": "Universal RSS",
    "default_popup": "popup.html"
  },
  "permissions": [
    "contentSettings",
    "cookies",
    "storage",
    "notifications",
    "<all_urls>"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}